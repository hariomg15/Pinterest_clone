<% include ./partials/header.ejs %>
<h1>
    <div class="w-full h-screen bg-center bg-cover bg-zinc-300  flex items-center justify-center ">
        <div class="w-[25vw] h-[65vh] bg-white px-12 py-5 rounded-[30px]">
          <h1 class="text-3xl text-center font-semibold  text-zinc-700 tracking-tighter capitalize">Create New Account</h1>
          <form action="/register" method="post">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="email">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
            <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer" type="submit" value="Create New Account">
           <p class="text-xs font-semibold text-zinc-600 mt-7 w-2/2 max-auto text-center">By continuing, you agree to Pinterest's 
            Terms of Service and acknowledge you've read our Privacy Policy Notice at collection
          </p>
          </form>
          <a  class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account ?</a>
        </div>
      </div>
</h1>
